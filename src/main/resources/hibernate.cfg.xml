<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>

    
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/unsis_smile</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">CETI</property>
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.show_mysql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.unsis.odonto.edu.entity.Usuarios"></mapping>
    </session-factory>
</hibernate-configuration>
